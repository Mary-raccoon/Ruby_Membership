<%if flash[:errors]%>
    <%= flash[:errors] %>
<%end%>
<h2>Register</h2>
<form action="/create" method="POST">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <table>
        <tr>
            <td><label for="first_name">First Name:</label></td>
            <td><input type="text" name="user[first_name]"></td>
        </tr>
        <tr>
            <td><label for="last_name">Last Name:</label></td>
            <td><input type="text" name="user[last_name]"></td>
        </tr>
        <tr>
            <td><label for="email">Email:</label></td>
            <td><input type="text" name="user[email]"></td>
        </tr>
        <tr>
            <td><label for="password">Password:</label></td>
            <td><input type="password" name="user[password]"></td>
        </tr>
        <tr>
            <td><label for="password_confirmation">Password Confirmation:</label></td>
            <td><input type="password" name="user[password_confirmation]"></td>
        </tr>
        <tr>
            <td><input type="submit" value="Register"></td>
    </table>
</form>
<h2>Login</h2>
<form action="/process" method="POST">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <table>
        <tr>
            <td><label for="email">Email:</label></td>
            <td><input type="text" name="email"></td>
        </tr>
        <tr>
            <td><label for="password">Password:</label></td>
            <td><input type="password" name="password"></td>
        </tr>
        <tr>
            <td><input type="submit" value="Login"></td>
    </table>
</form>

